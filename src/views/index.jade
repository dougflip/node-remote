!!!

html
  head
    title NodeRemote
    meta(name="viewport", content="width=device-width")
    meta(name="mobile-web-app-capable", content="yes")
    link(rel="shortcut icon", sizes="126x126", href="/images/icon-196.png")
    link(rel="apple-touch-icon", href="/images/icon-128.jpg")
    link(rel="stylesheet", href="/styles/main.css")

  body

    include ./mixins

    section.system
      include ./_system

    section.netflix
      include ./_netflix

    section.trackpad
      input.trackpad--input(type="text", name="str", placeholder="Type input...")
      .trackpad--sensor
      .trackpad--buttons.clearfix
        .trackpad--click.trackpad--left-click(data-which="1")
        .trackpad--click.trackpad--right-click(data-which="3")

  script(src="/bowercomponents/jquery/jquery.min.js")
  script(src="/scripts/main.js")
