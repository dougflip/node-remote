!!!

html
  head
    title NodeRemote
    meta(name="viewport", content="width=device-width")
    meta(name="mobile-web-app-capable", content="yes")
    link(rel="shortcut icon", sizes="126x126", href="/images/icon-196.png")
    link(rel="apple-touch-icon", href="/images/icon-128.jpg")
    link(rel="stylesheet", href="/styles/main.css")

  body

    include ./mixins

    section.system
      include ./_system

    section.netflix
      include ./_netflix

    section.trackpad
      .trackpad--controls
        form.trackpad--input(action="/text", method="POST")
          input.trackpad--text(type="text", name="text", placeholder="Type input...")
        .trackpad--enter.clearfix
          +keyboardShort("[enter]","KP_Enter")
      .trackpad--sensor
      .trackpad--buttons.clearfix
        .trackpad--click.trackpad--left-click(data-url="/mouse/leftClick")
        .trackpad--click.trackpad--double-click(data-url="/mouse/doubleClick")
        .trackpad--click.trackpad--right-click(data-url="/mouse/rightClick")

  script(src="/bowercomponents/jquery/jquery.min.js")
  script(src="/scripts/main.js")
